<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbck">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center" android:padding="20dp" android:text="Instrucciones"
                  android:textColor="#ffffff"
                  android:textSize="20sp"
                  android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="center" android:padding="20dp" android:text="@string/lore"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundbutton"
            android:padding="5dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="COMENZAR JUEGO"
            android:textColor="#ffffff"
        />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>